@model OnlineShoppingDemo2.Models.Product

@{
    ViewBag.Title = "Create";
    if (Session["UserName"] == null)
    {
        Response.Redirect("~/Account/Login", false);
    }
}

<h2>Create</h2>


<form method="post" enctype="multipart/form-data">
  
    @Html.AntiForgeryToken()

