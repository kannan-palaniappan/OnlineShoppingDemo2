@model IEnumerable<OnlineShoppingDemo2.Models.Product>

@{
    ViewBag.Title = "Index";
    if (Session["UserName"] == null)
    {
        Response.Redirect("~/Account/Login", false);
    }
}




<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categories.CateName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Categories.CateName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        <a href="~/Images/@item.ImageUrl">@Html.DisplayFor(modelItem => item.ImageUrl)</a>
    </td>
    <td>
        <a href="~/Images/@item.ImageUrl1">@Html.DisplayFor(modelItem => item.ImageUrl1)</a>
    </td>
    <td>
        <a href="~/Images/@item.ImageUrl2">@Html.DisplayFor(modelItem => item.ImageUrl2)</a>
    </td>
    <td>
        <a href="~/Images/@item.ImageUrl3">@Html.DisplayFor(modelItem => item.ImageUrl3)</a>
    </td>
    <td>
        <a href="~/Images/@item.ImageUrl3">@Html.DisplayFor(modelItem => item.Price)</a>
    </td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
